<%- include('./partials/headers.ejs') %> 
<section id="content" class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div>
                <h2 class="text-center pb-2">Your Notes App</h2>
                <form class="d-flex my-2 p-0" role="search">
                    <input
                        class="form-control me-2"
                        type="search"
                        placeholder="Search"
                        aria-label="Search"
                    />
                    <button
                        class="btn btn-outline-success"
                        type="submit"
                    >
                        Search
                    </button>
                </form>
                <a href="/addnote/">
                    <button class="btn btn-primary my-2">Add Note</button>
                </a>
                <section class="mt-3">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr class="text-center">
                                <th>S No.</th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Descriptions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%  notesData.forEach((results, key)=>{   %>
                            <tr class="text-center">
                                <td><%=key+1%></td>
                                <td><%=results.addDate%></td>
                                <td><%=results.title%></td>
                                <td><%=results.desc%></td>
                                <td>
                                    <a href="/updatenote/<%=results.id%>">
                                        <button class="btn btn-success">
                                            Update
                                        </button>
                                    </a>
                                    <a href="/deletenote/<%=results.id%>">
                                        <button class="btn btn-danger ms-2">
                                            Delete
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            <%  }); %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</section>  
<%- include('./partials/footer.ejs') %> 